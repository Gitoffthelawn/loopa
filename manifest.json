{
  "manifest_version": 3,
  "name": "loopa",
  "version": "1.0",
  "description": "Loop sections of videos slowly",
  "icons": {
    "32": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Loopa",
    "default_popup": "popup/index.html"
  },
  "permissions": ["activeTab"]
}
